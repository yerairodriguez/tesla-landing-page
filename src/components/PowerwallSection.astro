---
import Section from "./Section.astro";
---

<Section
  title="Solar y Powerwall"
  subtitle="Energía para todos"
  color="black"
  textColor="black"
>
  <div slot="footer" class="flex flex-row justify-center gap-x-6">
    <a
      class="text-white border-[3px] border-gray-600 bg-gray-600 text-sm rounded font-medium px-12 py-2 inline-block hover:border-black hover:bg-black hover:text-white transition-colors"
      href="#">Saber más</a
    >
  </div>
  <img
    slot="background"
    src="/solar-panels.avif"
    alt="SolarPowerwall"
    class="h-full w-full object-cover object-center"
  />
</Section>
